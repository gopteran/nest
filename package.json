{
  "name": "nest",
  "version": "1.0.0",
  "description": "Documentation repository for the Gopteran project",
  "main": "index.js",
  "scripts": {
    "dev": "hugo server --enableGitInfo --noHTTPCache --disableFastRender",
    "dev:css": "tailwindcss -i ./assets/css/input.css -o ./assets/css/main.css --minify --watch",
    "build": "hugo --gc --minify --enableGitInfo",
    "build:css": "tailwindcss -i ./assets/css/input.css -o ./assets/css/main.css --minify",
    "deploy": "pnpm run build",
    "format": "prettier --write .",
    "preview": "hugo server --environment production --disableFastRender",
    "clean": "hugo --gc && rm -rf public resources"
  },
  "keywords": [
    "gopteran",
    "documentation",
    "hugo",
    "tailwindcss"
  ],
  "author": "gopteran",
  "license": "ISC",
  "packageManager": "pnpm@10.17.1",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "flexsearch": "^0.8.212",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@hugomods/prettier-config": "^0.2.0",
    "prettier": "^3.7.4"
  }
}
