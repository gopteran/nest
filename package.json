{
  "name": "nest",
  "version": "1.0.0",
  "description": "Documentation repository for the Gopteran project",
  "main": "index.js",
  "scripts": {
    "dev": " hugo server --enableGitInfo --noHTTPCache --disableFastRender",
    "dev:css": "tailwindcss -i ./assets/css/input.css -o ./assets/css/main.css --minify --watch",
    "build": "hugo --gc --minify --enableGitInfo",
    "build:css": "npx tailwindcss -i ./assets/css/input.css -o ./assets/css/main.css --minify",
    "deploy": "sh build",
    "format": "npx prettier --write ."
  },
  "keywords": [],
  "author": "gopteran",
  "license": "ISC",
  "packageManager": "pnpm@10.15.1",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "flexsearch": "^0.8.212",
    "tailwindcss": "^4.1.13"
  }
}
